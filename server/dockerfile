# --- build stage ---
FROM node:20-slim AS build
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --legacy-peer-deps

# Copy config files BEFORE Prisma generation
COPY tsconfig.json ./
COPY prisma ./prisma

# CRITICAL: Clean and generate fresh
RUN rm -rf node_modules/.prisma && \
    rm -rf node_modules/@prisma && \
    npx prisma generate

# Copy source AFTER Prisma generation
COPY src ./src

# Build
RUN npm run build

# Debug: Show what was generated
RUN echo "=== Prisma Client Check ===" && \
    (head -5 src/generated/prisma/client/index.js 2>/dev/null || \
     head -5 node_modules/.prisma/client/index.js 2>/dev/null || \
     echo "No Prisma client found")

# --- runtime stage ---
FROM node:20-slim
WORKDIR /app

ENV NODE_ENV=production
ENV PORT=4000
ENV OLLAMA_HOST=https://ollama.com
ENV ACCESS_TOKEN_EXPIRES_IN=15m
ENV REFRESH_TOKEN_EXPIRES_IN=30d
ENV REFRESH_COOKIE_NAME=rt
ENV REFRESH_COOKIE_PATH=/api/auth/refresh
ENV RATE_LIMIT_WINDOW_MS=60000
ENV RATE_LIMIT_MAX=100

COPY package*.json ./
RUN npm install --legacy-peer-deps --only=production

COPY tsconfig.json ./
COPY prisma ./prisma

# Generate Prisma for production
RUN npx prisma generate

# Copy built app
COPY --from=build /app/dist ./dist

RUN mkdir -p /app/jobs

EXPOSE 4000
CMD ["node", "--enable-source-maps", "dist/server.js"]