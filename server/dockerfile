# --- build stage ---
FROM node:20-slim AS build
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies (including Prisma CLI)
RUN npm install --legacy-peer-deps

# Copy Prisma schema
COPY prisma ./prisma

# Generate Prisma Client BEFORE building TypeScript
RUN npx prisma generate

# Copy source and config
COPY tsconfig.json ./
COPY src ./src

# Now build TypeScript (Prisma client exists now)
RUN npm run build

# --- runtime stage ---
FROM node:20-slim
WORKDIR /app

ENV NODE_ENV=production
ENV PORT=4000
ENV OLLAMA_HOST=https://ollama.com
ENV ACCESS_TOKEN_EXPIRES_IN=15m
ENV REFRESH_TOKEN_EXPIRES_IN=30d
ENV REFRESH_COOKIE_NAME=rt
ENV REFRESH_COOKIE_PATH=/api/auth/refresh
ENV RATE_LIMIT_WINDOW_MS=60000
ENV RATE_LIMIT_MAX=100

# Copy package files
COPY package*.json ./

# Install production dependencies only
RUN npm install --legacy-peer-deps --only=production

# Copy Prisma schema for runtime
COPY prisma ./prisma

# Generate Prisma Client for production
RUN npx prisma generate

# Copy built application from build stage
COPY --from=build /app/dist ./dist

# Create jobs directory for PVC mount
RUN mkdir -p /app/jobs

EXPOSE 4000
CMD ["node", "--enable-source-maps", "dist/server.js"]